//searching in 2D array 
#include<iostream>
using namespace std;
int main(){
int n,m,x;
cout<<"Enter the rows of the array"<<endl;
cin>>n;
cout<<"Enter the column of the array"<<endl;
cin>>m;
int arr[n][m];
for(int i=0;i<n;i++){
	for(int j=0;j<m;j++){
	cout<<"Enter the elements of the array"<<endl;
	cin>>arr[i][j];
	}	}
for(int i=0;i<n;i++){
for(int j=0;j<m;j++){
cout<<"Enter the element of the array"<<endl;
cout<<arr[i][j]<<" ";
}	cout<<endl; 	} 
cout<<"Enter the element to search in the array"<<endl;
cin>>x;
bool flag=false;
for(int i=0;i<n;i++){
for(int j=0;j<m;j++){
	if(arr[i][j]==x){
	cout<< i<<" "<<j<<endl;
	flag=true;	
}	}	}
if(flag){
cout<< "FOUND "<<endl;
}
else{
 cout<<"NOT FOUND"<<endl;	
}
return 0;
}
